server {
    listen 443 ssl;
    listen [::]:443 ssl;

    root /home/tim/Techsuite/client/build;
    index index.html;
    server_name 128.199.207.32 techsuite.timz.dev www.techsuite.timz.dev;

    # Frontend routes
    location / {
        include proxy_params;
        #proxy_pass http://127.0.0.1:3000;
        try_files $uri /index.html;    
    }

    # Backend API namespace
    location /api {
        include proxy_params;
        proxy_pass http://127.0.0.1:9002;
    }

    # Handling socket connections
    location /socket.io {
        include proxy_params;
        proxy_http_version 1.1;
        proxy_buffering off;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_pass http://127.0.0.1:9002/socket.io;
    }

    ssl_certificate /etc/letsencrypt/live/techsuite.timz.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/techsuite.timz.dev/privkey.pem; # managed by Certbot

}

# Redirecting HTTP connections to HTTPS
server {
    listen 80;
    server_name 128.199.207.32 techsuite.timz.dev www.techsuite.timz.dev;

    if ($host = www.techsuite.timz.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = techsuite.timz.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
}


